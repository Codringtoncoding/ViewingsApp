@{
    ViewData["Title"] = "Home Page";
}

<div class="carousel slide full-width" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="hero_image" src="/images/hero_01.jpg" alt="hero image">
        </div>
        <div class="carousel-item">
            <img class="hero_image" src="/images/hero_02.jpg" alt="hero image">
        </div>
    </div>
</div>

<h1 class="display-4">Welcome</h1>
<p>Book a view your dream house today!</p>

<div class="row mt-5">
    <section class="col-md-6 mb-4">
        <img src="images/house_01.jpg" alt="" class="card-image">
        <h2>Our Properties</h2>
        <p>We've got a selection of great properties just waiting for you to view them!</p>
        <p>Book your viewing today!</p>
        
        <a class="btn btn-primary" href="/properties">View All</a>
    </section>
    <section class="col-md-6">
        <img src="images/person_01.jpg" alt="" class="card-image">
        <h2>Meet Our Agents</h2>
        <p>We've got a high class lineup of helpful agents</p>
        <p>Meet them today</p>

        <a class="btn btn-primary" href="/agents">View All</a>
    </section>
</div>
